<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/tabsFragment">

    <fragment
        android:id="@+id/tabsFragment"
        android:name="com.example.taekwbelt.ui.tabs.TabsFragment"
        tools:layout="@layout/fragment_tabs" >
        <action
            android:id="@+id/action_tabsFragment_to_navigation_requirements"
            app:destination="@id/navigation_requirements" />
        <action
            android:id="@+id/action_tabsFragment_to_navigation_patterns"
            app:destination="@id/navigation_patterns" />
        <action
            android:id="@+id/action_tabsFragment_to_terminologiesFragment"
            app:destination="@id/navigation_terminologies" />
    </fragment>

    <fragment
        android:id="@+id/navigation_requirements"
        android:name="com.example.taekwbelt.ui.requirements.RequirementsFragment"
        android:label="@string/title_requirements"
        tools:layout="@layout/fragment_requirements" >
        <argument
            android:name="parserRequir"
            app:argType="com.example.taekwbelt.models.UBGradingRequirement[]" />
    </fragment>

    <fragment
        android:id="@+id/navigation_patterns"
        android:name="com.example.taekwbelt.ui.patterns.PatternsFragment"
        android:label="@string/title_patterns"
        tools:layout="@layout/fragment_patterns" >
        <argument
            android:name="parserPattern"
            app:argType="com.example.taekwbelt.models.UBGradingPattern[]" />
    </fragment>
    <fragment
        android:id="@+id/navigation_terminologies"
        android:name="com.example.taekwbelt.ui.terminologies.TerminologiesFragment"
        android:label="@string/title_terminologies"
        tools:layout="@layout/fragment_terminologies" >
        <argument
            android:name="parserTerminologies"
            app:argType="com.example.taekwbelt.models.UBTerminologyItem[]" />
    </fragment>

</navigation>